<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>New Practice Project</title>
        <link rel="stylesheet" href="/Stylesheets/style.css">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body>

        <div class="main w-full min-h-screen bg-zinc-900">

            <!-- Form -->
            <div class="form p-10  text-white">
                <form action="/create" method="post">
                    <input class=" w-full rounded-lg block px-5 py-2 bg-zinc-800" type="text" placeholder="Enter Text"
                        name="title">
                    <textarea class=" w-full rounded-lg block mt-2 px-5 py-2 bg-zinc-800 resize-none"
                        placeholder="Enter Your Detail Here" name="details"></textarea>
                    <input class="mt-2 px-5 py-2 bg-blue-600 rounded-lg" type="submit" value="Create Task">
                </form>

            </div>

            <!-- Task -->
            <div class="tasks p-10 flex gap-4 flex-wrap ">
                <% if(files.length>0 ){%>

                    <% files.forEach((val)=>{ %>
                        <div class="task min-w-72  px-3 py-4 bg-zinc-800 rounded-md">
                            <h1 class="text-white tracking-tighter text-3xl">
                                <%= val%>
                            </h1>
                            <div class="flex w-full justify-between items-center mt-3">
                                <a href="/file/<%= val %>" class="text-blue-600 inline-block ">Read More</a>
                                <a href="/edit/<%= val %>" class="text-zinc-600 inline-block ">Edit</a>
                            </div>
                        </div>
                        <%}) %>
                            <%} else{%>
                                <h3 class="text-zinc-600">No Task yet!</h3>
                                <%} %>

            </div>


        </div>

        <script src="/Javascripts/script.js"></script>
    </body>

</html>