<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SSR</title>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body>
        <div class="w-full h-full bg-zinc-800 p-10 text-white">
            <div class="mb-7"> <a class="text-blue-500 text-sm px-2  mb-10" href="/">Back to Home</a></div>


            <h1 class="text-3xl tracking-tighter mb-4 ">All Users</h1>

            <div class="users flex gap-4 felx-wrap">
                <% if(users.length> 0 ){%>
                    <% users.forEach((user)=>{%>
                        <div class="user w-72 p-5 bg-zinc-700 rounded-lg">
                            <div class="w-full h-52 rounded-lg bg-zinc-600 overflow-hidden">
                                <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
                            </div>
                            <h3 class="text-xl mt-3 tracking-tighter">
                                <%= user.name %>
                            </h3>
                            <h5 class="text-zinc-500">
                                <%= user.email %>
                            </h5>
                            <div class="flex gap-3 mt-6">
                                <a class="text-zinc-400" href="">Edit User</a>
                                <a class="text-red-400" href="/delete/<%= user._id %>">Delete User</a>
                            </div>
                        </div>
                        <%})%>

                            <%} else {%>
                                <h2 class="text-zinc-500">No User Yet</h2>
                                <%}%>

            </div>

        </div>
    </body>

</html>